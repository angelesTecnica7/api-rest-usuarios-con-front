const  express  =  require ( 'express' ) 
const  multer   =  require ( 'multer' ) 
const  upload  =  multer ( {  dest : 'uploads/'  } )

const  app  =  express ( )

app.post ( '/profile' , upload.single ( 'avatar' ) , function ( req , res , next ) { // req.file es el archivo `avatar` // req.body contendrá los campos de texto, si los hubiera } )      
  
  


app.post ( '/photos/upload' , upload.array ( 'photos' , 12 ) , function ( req , res , next ) { // req.files es un array de archivos `photos` // req.body contendrá los campos de texto, si los hubiera } )       
  
  


const  uploadMiddleware  =  upload.fields ( [ { name : ' avatar' , maxCount : 1 } , { name : 'gallery' , maxCount : 8 } ] ) ;
app.post ( ' /cool-profile' , uploadMiddleware , function ( req , res , next ) { // req.files es un objeto (String - > Array) donde fieldname es la clave y el valor es un array de archivos // // ej. // req.files['avatar'][0] -> File // req.files['gallery'] -> Array // // req.body contendrá los campos de texto, si los hubiera } );  